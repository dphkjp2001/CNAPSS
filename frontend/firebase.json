{
  "hosting": {
    "site": "cnapss-3da82",
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "headers": [
      {
        "source": "/api/**",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache" }
        ]
      }
    ],
    "redirects": [
      {
        "source": "/select-school",
        "destination": "/",
        "type": 301
      }
    ],
    "rewrites": [
      { "source": "/api/**", "destination": "https://nyueta.onrender.com/api/:**" },
      { "source": "**", "destination": "/index.html" }
    ]
  }
}


